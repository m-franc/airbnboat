<!DOCTYPE html>
<html>


    <header>

      <nav class="navbar navbar-expand bg-body-tertiary">
      <%= link_to image_tag("airbnboat_navbar.png", alt: "Boat-image", class: "navbar-brand"), root_path %>
        <div class="container-fluid">

          <div class="menu">
                  <%= link_to "Rent My Boat Now !", new_boat_path, class: "nav-link active", id: "rent", aria: { current: "page" } %>
              </div>
          </div>
<li class="nav-item dropdown" style="list-style: none; margin: 0; padding: 0;" >
  <% if user_signed_in? %>
    <!-- Image de profil ou par défaut avec dropdown -->
    <div class="profile">
    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <% if current_user.photo_profil && current_user.photo_profil.attached? %>
        <%= image_tag current_user.photo_profil, alt: "Profile Picture", class: "avatar rounded-circle", width: 35, height: 35 %>
      <% else %>
        <%= image_tag "default-profile.png", alt: "Default Profile Picture", class: "avatar rounded-circle", width: 35, height: 35 %>
      <% end %>
    </a>
</div>
    <!-- Menu déroulant -->
      <div class="dd_profile">
    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
      <%= link_to "My Profile", edit_user_registration_path, class: "dropdown-item" %>
      <%= link_to "Dashboard", user_dashboard_path, class: "dropdown-item" %>
      <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
      </div>
    </div>
  <% else %>
    <!-- Boutons pour les utilisateurs non connectés -->
    <div class="btnSiSu">
      <%= link_to 'Sign up', new_user_registration_path, class: 'btn-signUp' %>
      <%= link_to 'Sign in', new_user_session_path, class: 'btn-signIn' %>
    </div>
  <% end %>
</li>
      </nav>
    </header>
