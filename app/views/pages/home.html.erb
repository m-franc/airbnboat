<div id="banner" style="position: relative;">
  <%= image_tag 'BoatHeader.png', class: 'banner-image' %>

<%= render 'pages/search_bar' %>
</div>

<div class="container-card">
  <% @boats.each do |boat| %>
    <%= link_to boat_path(boat), style: "text-decoration: none; color: inherit;" do %>
      <div class="card">
        <ul>
          <!-- Carrousel -->
          <li>
            <div id="carousel-<%= boat.id %>" class="carousel slide">
              <!-- Indicateurs -->
              <div class="carousel-indicators">
                <% if boat.url_img.present? %>
                  <button type="button" data-bs-target="#carousel-<%= boat.id %>" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <% end %>
                <% if boat.url_img_two.present? %>
                  <button type="button" data-bs-target="#carousel-<%= boat.id %>" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <% end %>
                <% if boat.url_img_three.present? %>
                  <button type="button" data-bs-target="#carousel-<%= boat.id %>" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <% end %>
              </div>
              <!-- Images -->
              <div class="carousel-inner">
                <% if boat.url_img.present? %>
                  <div class="carousel-item active">
                    <img src="<%= boat.url_img %>" class="d-block w-100" alt="Boat Image 1">
                  </div>
                <% end %>
                <% if boat.url_img_two.present? %>
                  <div class="carousel-item">
                    <img src="<%= boat.url_img_two %>" class="d-block w-100" alt="Boat Image 2">
                  </div>
                <% end %>
                <% if boat.url_img_three.present? %>
                  <div class="carousel-item">
                    <img src="<%= boat.url_img_three %>" class="d-block w-100" alt="Boat Image 3">
                  </div>
                <% end %>
              </div>
              <!-- Navigation -->
              <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= boat.id %>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= boat.id %>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </li>
          <!-- Fin du carrousel -->
          <li><h1><%= boat.name %></h1></li>
          <li><h3><%= boat.capacity %> <i class="fa-solid fa-person"></i></h3></li>
          <li><p><%= boat.content %></p></li>
          <li><h2><%= boat.daily_price %> â‚¬</h2></li>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>

